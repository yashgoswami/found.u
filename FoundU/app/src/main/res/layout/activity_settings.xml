<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/foundubkg"
    android:orientation="vertical"
    tools:context="com.alterloop.foundu.Settings">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/defaultimg"
        android:layout_weight="1"
        android:padding="2dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/buttonLoadPicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Select Picture"
        android:layout_gravity="center"
        android:background="@color/DeepSkyBlue"
        android:textColor="@color/white" >

        </Button>
    <!--<ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView_test"
        android:src="@drawable/sample122"
        android:layout_gravity="center_horizontal"
        android:longClickable="false"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:background="@color/DeepSkyBlue"
        />-->

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/buttonUploadProfilePic"
        android:onClick="uploadProfilePic"
        android:background="@color/DeepSkyBlue"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profilePicText"
        android:layout_marginTop="10dp"/>

</LinearLayout>
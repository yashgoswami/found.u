<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp">

    <ImageView
        android:id="@+id/friend_imageView"
        android:src="@drawable/defaultimg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:longClickable="false"
        android:padding="1dp"
        android:background="@color/DeepSkyBlue"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Yash Goswami"
        android:id="@+id/friend_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/friend_imageView"
        android:layout_toEndOf="@+id/friend_imageView"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/friend_address"
        android:textColor="@color/black"
        android:typeface="serif"
        android:layout_below="@+id/friend_name"
        android:layout_toRightOf="@+id/friend_imageView"
        android:layout_toEndOf="@+id/friend_imageView"
        android:password="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/friend_range" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="220.2 KM"
        android:id="@+id/friend_range"
        android:textColor="@color/black"
        android:typeface="serif"
        android:textStyle="italic"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/friend_imageView"
        android:layout_alignBottom="@+id/friend_imageView"
        android:layout_toRightOf="@+id/friend_imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2012-10-19"
        android:id="@+id/friend_lastseenon"
        android:textColor="@color/DarkGray"
        android:typeface="serif"
        android:layout_below="@+id/friend_address"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>